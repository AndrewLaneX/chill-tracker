<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Feed</title>
    <%- include('./partials/head') %>
  </head>
  <body>
    <%- include('./partials/navbar') %>
    <div class="container">
      <h1>Feed</h1>
      <p>Add your latest log on <a href="/your-page">Your Page</a></p>
      <h3>Latest 10 logs</h3>
      <% dailyLogs.forEach(log => { %>
      <div id="<%= log.user %>day<%= log.day %>" class="card mb-3 w-100">
        <div class="card-header">
          <span
            ><a href="/user/<%= log.user %>"
              ><img
                id="<%= log.user %>pic"
                src="/api/user-pic/<%= log.user %>"
                alt=""
                style="height: 30px; width: 30px;" /></a></span
          ><a class="ml-2" href="/user/<%= log.user %>"><%= log.user %></a>
        </div>
        <div class="card-body">
          <h5 class="card-title">
            Day <%= log.day %> of
            <span id="<%= log.user %>task"></span>
          </h5>
          <p class="card-text">
            <%= log.text %>
          </p>
          <p class="card-text">
            Proof:
            <a href="<%= log.proof %>" target="_blank" rel="noopener noreferrer"
              ><%= log.proof %></a
            >
          </p>
        </div>
      </div>
      <% }) %>
    </div>
    <script src="/js/feed.js"></script>
  </body>
</html>
